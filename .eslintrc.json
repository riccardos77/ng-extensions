{
  "root": true,
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["tsconfig.json"]
      },
      "plugins": ["@riccardos77/eslint-plugin-angular"],
      "extends": "plugin:@riccardos77/eslint-plugin-angular/recommended"
    },
    {
      "files": ["*.html"],
      "plugins": ["@riccardos77/eslint-plugin-angular"],
      "extends": ["plugin:@riccardos77/eslint-plugin-angular/template-recommended"]
    }
  ]
}
