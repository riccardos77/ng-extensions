/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@ng-ext/core": [
        // "projects/ng-ext/core/src/public-api.ts",
        "dist/ng-ext/core/ng-ext-core",
        "dist/ng-ext/core"
      ],
      "@ng-ext/forms": [
        // "projects/ng-ext/forms/src/public-api.ts",
        "dist/ng-ext/forms/ng-ext-forms",
        "dist/ng-ext/forms"
      ],
      "@ng-ext/router": [
        // "projects/ng-ext/router/src/public-api.ts",
        "dist/ng-ext/router/ng-ext-router",
        "dist/ng-ext/router"
      ]
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "module": "es2020",
    "lib": ["es2020", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
